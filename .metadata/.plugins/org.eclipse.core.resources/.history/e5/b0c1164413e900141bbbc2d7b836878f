
public class MaxHeap {
	int heap[];
	int n;
	MaxHeap(int l)
	{
		heap=new int[l];
		n=0;				// root node starts with index 1
	}
	void insert(int x)
	{
		if(n==heap.length-1)
		{
			System.out.println("Heap Full");
			return;
		}
		int pos=++n;
		while(pos!=1 && x>heap[pos/2])
		{
			heap[pos]=heap[pos/2];
			pos/=2;
		}
		heap[pos]=x;
	}
	void display()
	{
		for(int i=1;i<heap.length;i++)
			System.out.print(heap[i]+" ");
		System.out.println();
	}

}
