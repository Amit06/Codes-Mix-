import java.util.*;
public class Main
{
	public static void main(String args[])
	{
		Scanner in=new Scanner(System.in);
		
		int m,t;
		double r;
		m=in.nextInt();
		t=in.nextInt();
		r=in.nextDouble();
		m=m*t;
		double ti=t-1/12;
		double rhs=100+(r*ti)/100;
		double p=m/rhs;
		System.out.println(p);
	    
			
		}	
}

