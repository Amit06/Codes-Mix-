import java.util.*;
public class Main
{
	public static void main(String args[])
	{
		Scanner in=new Scanner(System.in);
		
		int m,t;
		double r;
		m=in.nextInt();
		t=in.nextInt();
		r=in.nextDouble();
		m=m*t;
		double ti=t-1/12;
		double rhs=1+(r*ti)
		double p=(m*t*100)/(100+12*r*(t-1));
		System.out.println(p);
	    
			
		}	
}

