'''
for i in range(input()):
    s=raw_input().strip()
    if len(s)==2:
        if s[0]==s[1] :
            print "1"
        else:
            print "0"
    else:
        pr=[]
        for i in range(len(s)-1):
            if s[i]==s[i+1]:
                pr.append(i)
                
        s=[i for i in s]
        ex=filter(lambda x: s.count(x)==1,s)
        if len(ex)==1:
            pr=[s.index(ex[0])]
        if pr==[]:
            print '0'
        else:
            
            for p in pr:
                q=p+1
                flag=True
                while(p!=q):
                    
                    if  p-1==q:
                        
                        break
                    p=p-1 if p>0 else len(s)-1
                    q=q+1 if q<len(s)-1 else 0
                    
                    if s[p]!=s[q]:
                        flag=False
                        break
                
                if flag:
                    break
            if not flag:
                print "0"
            else:
                print 1