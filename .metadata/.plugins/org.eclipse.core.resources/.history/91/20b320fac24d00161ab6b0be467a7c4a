n=input()
a=map(int,raw_input().split())
prev=[]
ctr=0

for i in a:
    if not prev:
        if i==0:
            ctr+=1
            prev.append('R')
        if i==1:
            prev.append('C')
        if i==2:
            prev.append('G')
        if i==3:
            prev.append('S')
    if prev :
        if i==0:
            ctr+=1
            prev.append('R')
        if i==1 and prev[-1]=='C':
            prev.append('C')
        if i==2 and prev[-1]!='G':
            prev.append('G')
        if i==3 and prev[-1]=='C':
            prev.append('G')
        if i==3 and prev[-1]=='G':
            prev.append('C')
        if i==3 and (prev[-1]=='S' or prev[-1]=='R'):
            prev.append('S')
        else:
            ctr+=1
            prev.append('R')
print ctr
