for _ in range(input()):
    n=input()
    a=map(int,raw_input().split())
    ps=[0]
    for i in range(n):
        ps.append(sum(a[:i+1]) %2)
    
    f0=-1
    l0=n
    f1=-1
    l1=n
    for i in range(n+1):
        if ps[i]==0:
            f0=i
            break
    for i in range(n,-1,-1):
        if ps[i]==0:
            l0=i
            break
    for i in range(n+1):
        if ps[i]==1:
            f1=i
            break
    for i in range(n,-1,-1):
        if ps[i]==1:
            l1=i
            break
    m0=len(a[f0:l0])
    m1=len(a[f1:l1])
    print max(m0,l0)