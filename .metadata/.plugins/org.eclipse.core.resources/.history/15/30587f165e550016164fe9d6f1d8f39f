for i in range(input()):
    n=input()
    a=map(int,raw_input().split())
    if n==1:
        print a[0]
    elif n==2:
        print max(a[0],a[1])
    else:
        a[n-2]=a[n-2]+a[n-1] if a[n-2]+a[n-1]%2==0 
        i=n-3
        while(i>=0):
            a[i]=max(a[i]+a[i+2],a[i+1])
            i-=1
        print a[0]