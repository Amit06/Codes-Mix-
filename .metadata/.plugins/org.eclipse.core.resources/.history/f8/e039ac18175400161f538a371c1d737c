class BinHeap():
    
    def __init__(self,heap,size):
        self.heap=heap
        self.size=size
    def buildHeap(self,a):
        self.heap=a.clone()
        heap.size=len(a)
    def removeMin(self):
        if self.size==0:
            "Print Empty heap"
            return
        removed=self.heap[0]
        self.heap[0]=self.heap[self.size-1]
        self.size-=1
        self.down(0)
        return removed
        
        
        