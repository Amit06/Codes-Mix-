class N:
    
    def __init__(self,w,l):
        self.w=w
        self.l=l
    def __ge__(self,a,b):
        if (a.w-a.l)!=(b.w-b.l):
            a.w-a.l>b.w-b.l
        else:
            a.w>a.l 
            
        
        

f=open('Jobs.txt','r')
n=[]
for line in f:
    n.append(N(map(int,line.split())))

s=sorted(n,reverse=True)
print s
