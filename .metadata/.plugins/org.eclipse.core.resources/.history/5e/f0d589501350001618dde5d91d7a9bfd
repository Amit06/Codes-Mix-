import java.util.*;

public class Main
{
	public static void main(String args[])
	{
		Scanner in=new Scanner(System.in);
		
		int m,t;
		double r;
		m=in.nextInt();
		t=in.nextInt();
		r=in.nextDouble();
		m=m*t;
		double ti=(t-1)/12.0;
		r=r/100;
		
		double l=r*ti;
		ti=Math.round(ti*100.0)/100.0;
		System.out.println(m+" "+l+" "+r+" "+ti);
		double p=m/(1200+(Math.round(r*(t-1))));
		System.out.println((Math.round(p)));
	    
			
		}	
}

