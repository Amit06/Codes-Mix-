n=input()
d=raw_input()
p=map(int,raw_input().split())
mini=float('inf')

for i in range(len(p)):
    j=i+1 
    while j<len(p) and p[j]-p[i] < mini  :
        if d[i]=='R' and d[j]=='L':
            
            mini=p[j]-p[i]
            break
        j+=1
print mini//2 if mini !=float('inf') else "-1"