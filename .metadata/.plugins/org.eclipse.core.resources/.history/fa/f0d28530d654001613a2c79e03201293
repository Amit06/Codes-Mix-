class anokhi():
    def __init__(self,sc,ti,sub,nam):
        self.sc=sc
        self.ti=ti
        self.sub=sub
        self.nam=nam
    def __le__(self,x):
        if x.sc>self.sc:
            return self.sc
        if x.ti>self.ti:
            return self.ti
        if x.sun>self.sub:
            return self.sub
        
for _ in range(input()):
    n=input()
    a=[]
    for i in range(n):
        a=map(int,raw_input().split())
        temp=anokhi(a[0],a[1],a[2],a[3])
        a.append(temp)