for i in range(input()):
    n=input()
    a=map(int,raw_input().split())
    if n==1:
        print a[0]
    elif n==2:
        if (a[0]+a[1])%2==0 :
            print a[0]+a[1]
        elif a[0]%2==0:
            print a[0]
        elif a[1]%2==0:
            print a[1]
        else:
            print "0"
            
    else:
        if a[n-2]+a[n-1]%2==0 
        a[n-2]=a[n-2]+a[n-1] else 
        i=n-3
        while(i>=0):
            a[i]=max(a[i]+a[i+2],a[i+1])
            i-=1
        print a[0]