for i in range(input()):
    s=raw_input().strip()
    if len(s)==2:
        if s[0]==s[1] :
            print "1"
        else:
            print "0"
    else:
        p=-1
        for i in range(len(s)-1):
            if s[i]==s[i+1]:
                p=i
                break
        s=[i for i in s] 
        if p==-1:
            print '0'
        else:
            q=p+1
            flag=True
            while(p!=q and p-1!=q):
                p=p-1 if p>0 else len(s)-1
                q=q+1 if q<len(s)-1 else 0
                
                if s[p]!=s[q]:
                    
                    flag=False
                    break
            if not flag:
                print "0"
            else:
                print 1