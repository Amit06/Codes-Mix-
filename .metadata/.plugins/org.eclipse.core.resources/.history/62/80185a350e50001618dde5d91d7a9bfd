import java.util.*;

public class Main
{
	public static void main(String args[])
	{
		Scanner in=new Scanner(System.in);
		
		int m,t;
		double r;
		m=in.nextInt();
		t=in.nextInt();
		r=in.nextDouble();
		m=m*t*1200;
		
		
		double p=m/(1200+r*(t-1));
		System.out.println((Math.round(p));
	    
			
		}	
}

