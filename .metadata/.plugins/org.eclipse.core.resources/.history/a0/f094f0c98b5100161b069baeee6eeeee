class letter:
    choices=[i for i in 'abcdefghijklmnopqrstuvwxyz']
    def __init__(self,val):
        self.val=self.choices.index(val)
    def next(self):
        self.val=self.choices[self.val+1] if self.val<26 else self.choices[0]
    def prev(self):
        self.val=self.choices[self.val-1] if self.val>0 else self.choices[25]

A=letter('a')
B=letter('z')
print A.val
print B.val
