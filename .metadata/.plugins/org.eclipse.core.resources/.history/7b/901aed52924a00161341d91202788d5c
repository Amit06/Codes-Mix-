class N:
    
    def __init__(self,w,l):
        self.w=w
        self.l=l
    def __gt__(self,a):
        if (self.w-self.l)!=(a.w-a.l):
            return self.w-self.l>a.w-a.l
        else:
            return self.w>a.w 
            
        
        

f=open('Jobs.txt','r')
n=[]
for line in f:
    t,u=map(int,line.split())
    no=N(t,u)
    n.append(no)
n=[N(4,6),N(1,3)]
print n[0]>n[1]
s=sorted(n,reverse=True)

ti=0
sum=0
while s:
    j=s.pop(0)
    print j.w,j.l
    sum+=(ti+j.l)*j.w
    ti+=j.l
print sum
    
    